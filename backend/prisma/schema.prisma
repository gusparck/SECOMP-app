generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  // url = env("DATABASE_URL")
}

model User {
  user_id      String  @id @default(cuid())
  full_name    String
  course       String
  registration String  @unique // matr√≠cula
  email        String  @unique
  password     String
  avatar_url   String?

  palestrante Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  role Role @default(USER)

  events_created Event[]
}

model Event {
  event_id    String   @id @default(cuid())
  title       String
  description String
  date        DateTime

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  deleted_at Boolean  @default(false)

  creator_id String
  creator    User   @relation(fields: [creator_id], references: [user_id])
}

enum Role {
  USER
  ADMIN
}
